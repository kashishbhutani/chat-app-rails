<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
       <div class="alert alert-success">
          <h4 class="alert-heading">
            Available Users
          </h4>
        </div>
      <div class="panel-body">
        <nav class="nav flex-column">
          <% @users.each do |user| %>
            <li><%= link_to user.name&.titleize, chat_rooms_path(user_id: user), remote: true, method: :post, class: 'nav-link room-nav-link' %></li>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="alert alert-primary">
      <h4 class="alert-heading">
        Chat Room
      </h4>
    </div>
      <ul id="chatrooms-list">
        <% @chat_rooms.each do |chat_room| %>
          <%= render 'chat_rooms/chat_room', chat_room: chat_room, user: current_user %>
        <% end %>
      </ul>
  </div>
</div>