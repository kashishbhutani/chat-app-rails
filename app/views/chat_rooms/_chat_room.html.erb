<li>
  <div class="panel panel-default" data-chatroom-id="<%= chat_room.id %>">
    <div class="panel-heading">
      <%= link_to chat_room.opposed_user(user).name&.titleize, '', class: 'toggle-window' %>
      <%= link_to "X", close_chat_room_path(chat_room), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'chat_rooms/chat_room_content', messages: chat_room.messages, user: user %>
        </ul>
      </div>
      <%= form_for [chat_room, chat_room.messages.new], remote: true do |f| %>
        <%= f.hidden_field :user_id, value: user.id %>
        <%= f.text_area :body, class: "form-control" %><br>
        <%= f.submit "Send", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</li>